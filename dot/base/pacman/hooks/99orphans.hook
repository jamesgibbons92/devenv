[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Searching for orphaned packages...
When = PostTransaction
Exec = /usr/bin/bash -c "(/usr/bin/pacman -Qtd && /usr/bin/echo '==> pacman -Qdtq | sudo pacman -Rns -') || /usr/bin/echo '==> no orphans found.'"
